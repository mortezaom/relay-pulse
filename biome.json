{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/dist/**",
			"!node_modules/**",
			"!src/components/ui/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"bracketSpacing": true,
		"indentWidth": 4,
		"lineWidth": 75,
		"formatWithErrors": true
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useMediaCaption": "off",
				"useKeyWithClickEvents": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"correctness": {
				"useJsxKeyInIterable": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"arrowParentheses": "always",
			"indentStyle": "tab",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab"
		},
		"linter": {
			"enabled": true
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"quoteStyle": "double"
		},
		"linter": {
			"enabled": true
		}
	}
}